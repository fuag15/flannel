#!/bin/bash

required=(vfx/pather vfx/python2.7)

export MAYA_PLUGIN_DIR=/maya/plugin/2012

if [[ in_path "PYTHONPATH" '/usr/bin/maya/201?/python' ]]; then
  replace_in_path "PYTHONPATH" '/usr/bin/maya/201?/python' '/usr/bin/maya/2013/python'
else
  append_path "PYTHONPATH" '/usr/bin/maya/2013/python'
fi

flannel vfx/maya_plugins/0.1
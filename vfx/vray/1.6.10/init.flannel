#!/bin/bash

local required=(pather vfx/maya/2013)

for module in "${required[@]}"; do
  flannel "$module"
done

if [[ "$1" == "clear" ]]; then
  remove_from_path VRAY_1_6_10 /some/path/to/vray/1.6.10
  remove_from_path PYTHONPATH /some/python/path/vray/1.6.10
else
  flannel "vfx/vray/!(1.6.10)" clear
  create_path VRAY_1_6_10 /some/path/to/vray/1.6.10
  prepend_path PYTHONPATH /some/python/path/vray/1.6.10
fi